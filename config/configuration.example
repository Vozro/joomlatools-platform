class JConfig {
	/* Site */
	public $sitename = 'Joomla!';			// Name of Joomla site
	public $editor   = 'tinymce';
	public $captcha = '0';
	public $list_limit = '20';

	/* User */
	public $root_user = '42';
	public $access    = '1';

	/* Database */
	public $dbtype = 'mysqli';				// Normally mysqli
	public $host = 'localhost';			    // This is normally set to localhost
	public $user = '';						// DB username
	public $password = '';					// DB password
	public $db = '';						// DB database name

	/* Server */
	public $secret   = ''; 		            // Change this to something more secure
	public $tmp_path = '/tmp';
	public $log_path = '/var/logs';
	public $force_ssl = 0;					// Force areas of the site to be SSL ONLY.  0 = None, 1 = Administrator, 2 = Both Site and Administrator

	/* Locale */
	public $offset = 'UTC';

	/* Session */
	public $lifetime        = '15';			// Session time
	public $session_handler = 'database';

	/* Mail */
	public $mailer = 'mail';
	public $mailfrom = '';
	public $fromname = '';
	public $sendmail = '/usr/sbin/sendmail';
	public $smtpauth = '0';
	public $smtpuser = '';
	public $smtppass = '';
	public $smtphost = 'localhost';

	/* Cache */
	public $caching = '0';
	public $cachetime = '15';
	public $cache_handler = 'file';

	/* Debug */
	public $debug = '0';
	public $debug_lang = '0';

	/* Meta */
	public $MetaDesc = 'Joomla! - the dynamic portal engine and content management system';
	public $MetaKeys = 'joomla, Joomla';
	public $MetaTitle = '1';
	public $MetaAuthor = '1';
	public $MetaVersion = '0';
	public $robots = '';

	/* SEO */
	public $sef = '1';
	public $sef_rewrite = '0';
	public $sef_suffix = '0';
	public $unicodeslugs = '0';

	/* Feed */
	public $feed_limit = 10;
	public $feed_email = 'author';
}
